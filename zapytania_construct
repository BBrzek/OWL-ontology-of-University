# CONSTRUCT 1
# Wymień wszystkie kursy oferowane przez Katedra_Informatyki

PREFIX ucz: <http://www.semanticweb.org/bbrzek/ontologies/2024/0/ontologia-uczelni#>

CONSTRUCT {
  ?course a ucz:Kursy.
  ?course ucz:prowadzonyPrzez ?lecturer.
}
WHERE {
  ?department a ucz:Katedra.
  ?department ucz:maKatedre ?course.
  ?course a ucz:Kursy.
  ?course ucz:prowadzonyPrzez ?lecturer.
  FILTER(?department = ucz:Katedra_Informatyki)
}


# CONSTRUCT 2
# Wymień wszystkich studentów sudiujących Informatyka / Ekonomia

PREFIX ucz: <http://www.semanticweb.org/bbrzek/ontologies/2024/0/ontologia-uczelni#>

CONSTRUCT {
  ?student a ucz:Student.
  ?student ucz:studiujeNa ?course.
}
WHERE {
  ?course a ucz:Kursy.
  ?course ucz:jestNaStudiach ?study.
  ?study a ucz:Studia.
  ?study ucz:ma ?field.
  ?field a ucz:Kierunek.
  ?field rdfs:label ?fieldName.
  ?student a ucz:Student.
  ?student ucz:studiujeNa ?course.
  FILTER(?fieldName IN ("Informatyka", "Ekonomia"))
}


# CONSTRUCT 3
# Wymień wszystkie kursy prowadzone przez Jadwiga_Kowalska / Mariusz_Hymel

PREFIX ucz: <http://www.semanticweb.org/bbrzek/ontologies/2024/0/ontologia-uczelni#>

CONSTRUCT {
  ?course a ucz:Kursy.
  ?course ucz:prowadzonyPrzez ?lecturer.
}
WHERE {
  ?course a ucz:Kursy.
  ?course ucz:prowadzonyPrzez ?lecturer.
  FILTER(?lecturer IN (ucz:Jadwiga_Kowalska, ucz:Mariusz_Hymel))
}


# CONSTRUCT 4
# Wymień wszystkie kursy o liczbie ECTS 5 i wyżej

PREFIX ucz: <http://www.semanticweb.org/bbrzek/ontologies/2024/0/ontologia-uczelni#>

CONSTRUCT {
  ?course a ucz:Kursy.
  ?course ucz:punktyECTS ?ects.
}
WHERE {
  ?course a ucz:Kursy.
  ?course ucz:punktyECTS ?ects.
  FILTER(?ects > 5)
}
